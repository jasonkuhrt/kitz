{
  "name": "@kitz/pkg",
  "version": "0.0.0-kitz-release",
  "description": "Package utilities (manifest schema, manager helpers)",
  "type": "module",
  "sideEffects": false,
  "imports": {
    "#pkg": "./build/_.js",
    "#pkg/*": "./build/*.js",
    "#manifest": "./build/manifest/_.js",
    "#manifest/*": "./build/manifest/*.js",
    "#manager": "./build/manager/_.js",
    "#manager/*": "./build/manager/*.js",
    "#pin": "./build/pin/_.js",
    "#pin/*": "./build/pin/*.js"
  },
  "exports": {
    ".": "./build/_.js",
    "./__": "./build/__.js",
    "./manifest": "./build/manifest/__.js",
    "./manager": "./build/manager/__.js",
    "./pin": "./build/pin/_.js"
  },
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "dev": "tsgo -p tsconfig.build.json --watch",
    "check:types": "tsgo --noEmit",
    "check:lint": "oxlint src/",
    "check:package": "publint && attw --pack --ignore-rules no-resolution cjs-resolves-to-esm internal-resolution-error"
  },
  "dependencies": {
    "@effect/platform": "^0.94.0",
    "@kitz/core": "workspace:*",
    "@kitz/env": "workspace:*",
    "@kitz/fs": "workspace:*",
    "@kitz/resource": "workspace:*",
    "@kitz/semver": "workspace:*",
    "@vltpkg/semver": "1.0.0-rc.12",
    "effect": "^3.0.0"
  },
  "devDependencies": {
    "@kitz/assert": "workspace:*",
    "@kitz/test": "workspace:*"
  }
}
