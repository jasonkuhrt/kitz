{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#pkg": [
        "./src/_.js"
      ],
      "#pkg/*": [
        "./src/*.js"
      ],
      "#manifest": [
        "./src/manifest/_.js"
      ],
      "#manifest/*": [
        "./src/manifest/*.js"
      ],
      "#manager": [
        "./src/manager/_.js"
      ],
      "#manager/*": [
        "./src/manager/*.js"
      ],
      "#pin": [
        "./src/pin/_.js"
      ],
      "#pin/*": [
        "./src/pin/*.js"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
