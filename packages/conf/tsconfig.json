{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#conf": [
        "./src/_.js"
      ],
      "#conf/*": [
        "./src/*.js"
      ],
      "#configurator": [
        "./src/configurator.js"
      ],
      "#file": [
        "./src/file/__.js"
      ],
      "#file/*": [
        "./src/file/*.js"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
