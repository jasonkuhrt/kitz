{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#conventional-commits": [
        "./src/_.js"
      ],
      "#conventional-commits/*": [
        "./src/*.js"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
