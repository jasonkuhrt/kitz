{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#monorepo": [
        "./src/_.ts"
      ],
      "#monorepo/*": [
        "./src/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.bench-d.ts",
    "**/*.test.ts",
    "**/*.test-d.ts"
  ]
}
