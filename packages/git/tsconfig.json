{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#git": [
        "./src/_.js"
      ],
      "#git/*": [
        "./src/*.js"
      ],
      "#kitz/test": [
        "../test/src/_.ts"
      ],
      "#kitz/test/test": [
        "../test/src/__.ts"
      ],
      "#kitz/test/*": [
        "../test/src/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
